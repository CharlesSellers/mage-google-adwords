{
    "name" : "luka/mage-google-adwords",
    "description" : "Google AdWords Tracking for Magento",
    "type" : "magento-module",
    "homepage" : "http://www.luka.de/",
    "license" : "GPL-3.0+",
    "authors" : [{
            "name" : "Axel Helmert",
            "email" : "ah@luka.de"
        }
    ],
    "keywords" : [
        "magento",
        "adwords",
        "google"
    ],

    "require" : {
        "magento-hackathon/magento-composer-installer" : "1.*"
    },

    "extra" : {
        "branch-alias": {
            "dev-develop": "1.1.x-dev",
            "dev-master": "1.0.x-dev"
        },
        "map" : [
            ["app/code/community/LUKA/GoogleAdWords", "app/code/community/LUKA/GoogleAdWords"],
            ["app/design/adminhtml/default/default/template/luka/google/adwords", "app/design/adminhtml/default/default/template/luka/google/adwords"],
            ["app/design/frontend/base/default/template/luka/google/adwords", "app/design/frontend/base/default/template/luka/google/adwords"],
            ["app/design/frontend/base/default/layout/luka_googleadwords.xml", "app/design/frontend/base/default/layout/luka_googleadwords.xml"],
            ["app/etc/modules/LUKA_GoogleAdWords.xml", "app/etc/modules/LUKA_GoogleAdWords.xml"],
            ["app/locale/de_DE/LUKA_GoogleAdWords.csv", "app/locale/de_DE/LUKA_GoogleAdWords.csv"]
        ]
    },

    "archive" : {
        "exclude" : [ "/.*", "/*.md", "/*.xml" ]
    }
}
